<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/book_link_icon"
        android:layout_width="125dp"
        android:layout_height="128dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/icon_book_recycler_list_link"
        app:civ_border_color="#000"
        app:civ_border_width="5dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название книги"

        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/book_link_icon"
        app:layout_constraintStart_toStartOf="@+id/book_link_icon"
        app:layout_constraintTop_toBottomOf="@+id/book_link_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>